<body class="bg-black text-white">
<%= form_with(model: @user_task, local: true, class: "bg-gray-900 mt-5 mb-4 p-6 rounded-xl shadow-lg max-w-lg mx-auto") do |f| %>
  <div class="mb-4">
    <%= f.label :proof, "Proof", class: "block text-white font-semibold mb-2" %>
    <%= f.text_area :proof, rows: 5, class: "w-full p-3 rounded-lg bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="text-right">
    <%= f.submit "Submit Proof", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition" %>
  </div>
<% end %>
</body>