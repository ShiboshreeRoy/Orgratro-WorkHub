<h1>Submit Proof</h1>

<!-- Show Task Details -->
<div class="mb-6 p-4 border rounded bg-gray-50">
  <h2 class="text-xl font-bold"><%= @task.name %></h2>
  <p class="text-gray-700 mt-2"><%= @task.description %></p>
  <% if @task.instructions.present? %>
    <p class="text-gray-500 mt-2"><strong>Instructions:</strong> <%= @task.instructions %></p>
  <% end %>
</div>

<!-- Proof Submission Form -->
<%= form_with(model: @user_task, local: true) do |f| %>
  <% if @user_task.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
      <h2><%= pluralize(@user_task.errors.count, "error") %> prohibited this proof from being saved:</h2>
      <ul>
        <% @user_task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :proof, "Proof", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :proof, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div>
    <%= f.submit "Submit Proof", class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
  </div>
<% end %>
