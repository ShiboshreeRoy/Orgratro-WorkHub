<h1 class="text-2xl font-bold mb-6">Request Withdrawal</h1>

<%= form_with model: @withdrawal, class: "space-y-4", local: true do |form| %>
  <div>
    <%= form.label :amount, "Amount to Withdraw", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :amount, step: 0.0000000001, min: 0, max: current_user.balance, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div>
    <%= form.submit "Request Withdrawal", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>