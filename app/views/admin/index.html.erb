<div class="min-h-screen bg-black text-green-400 p-6">
  <!-- Dashboard Title -->
  <h1 class="text-4xl font-bold text-green-400 mb-10 text-center">👤 Admin Dashboard</h1>
  <span class="text-sm text-green-300 mb-4 block text-center">
    Welcome, <%= current_user.email %>! You are logged in as an <%= current_user.role %>.
  </span>
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mb-12">
    <div class="bg-gray-900 shadow-lg hover:shadow-green-500/50 transition duration-300 rounded-xl p-6 text-center">
      <p class="text-sm uppercase text-green-300 mb-2">Total Users</p>
      <p class="text-4xl font-bold"><%= User.count %></p>
    </div>
    <div class="bg-gray-900 shadow-lg hover:shadow-green-500/50 transition duration-300 rounded-xl p-6 text-center">
      <p class="text-sm uppercase text-green-300 mb-2">New This Week</p>
      <p class="text-4xl font-bold"><%= User.where('created_at >= ?', 7.days.ago).count %></p>
    </div>
    <div class="bg-gray-900 shadow-lg hover:shadow-green-500/50 transition duration-300 rounded-xl p-6 text-center">
      <p class="text-sm uppercase text-green-300 mb-2">Admins</p>
      <p class="text-4xl font-bold"><%= User.where(role: 'admin').count %></p>
    </div>
  </div>

  <!-- Recently Created Users Table -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-green-400 mb-4">🆕 Recently Created Users</h2>
    <div class="overflow-x-auto rounded-xl shadow-lg bg-gray-900">
      <table class="min-w-full text-sm">
        <thead class="bg-green-800 text-green-100 uppercase tracking-wide text-left">
          <tr>
            <th class="px-6 py-3">Email</th>
            <th class="px-6 py-3">Role</th>
            <th class="px-6 py-3">Joined</th>
          </tr>
        </thead>
        <tbody>
          <% User.order(created_at: :desc).limit(5).each do |user| %>
            <tr class="border-b border-green-800 hover:bg-green-900 transition">
              <td class="px-6 py-3 text-green-300"><%= user.email %></td>
              <td class="px-6 py-3 capitalize"><%= user.role %></td>
              <td class="px-6 py-3 text-green-200"><%= user.created_at.strftime("%b %d, %Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- User Management Section -->
  <div>
    <h2 class="text-2xl font-semibold text-green-400 mb-6">⚙️ Manage All Users</h2>

    <% @users.each do |user| %>
      <%= form_for(user, url: admin_path(user), remote: true, method: :patch, html: { class: "bg-gray-900 border border-green-800 rounded-xl p-6 mb-6 shadow-md transition hover:shadow-green-600/50" }) do |f| %>
        <div class="space-y-4">
          <p class="text-green-300 font-semibold">
            Email: <span class="text-green-100 font-medium"><%= user.email %></span>
          </p>

          <div>
            <%= f.label :role, "Change Role", class: "block text-sm text-green-300 mb-1" %>
            <%= f.select :role, options_for_select(['admin', 'standard'], user.role), {}, class: "w-full p-2 rounded bg-gray-800 text-green-100 border border-green-700" %>
          </div>

          <%= f.submit "Update User", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
