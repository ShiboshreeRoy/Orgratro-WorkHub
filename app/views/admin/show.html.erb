<body class="bg-black">
<div class="max-w-4xl mx-auto p-6 bg-gray-900 rounded-lg shadow-lg mt-10 text-green-300">
  <h1 class="text-4xl font-bold mb-6 text-green-400">User Profile</h1>

  <div class="space-y-4">
    <div>
      <label class="block text-sm font-semibold mb-1 text-green-300">Email:</label>
      <p class="text-lg text-green-100 break-words"><%= @user.email %></p>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1 text-green-300">Role:</label>
      <p class="text-lg text-green-100 capitalize"><%= @user.role %></p>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1 text-green-300">Suspended:</label>
      <p class="text-lg text-green-100"><%= @user.suspended? ? "Yes" : "No" %></p>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1 text-green-300">Joined On:</label>
      <p class="text-lg text-green-100"><%= @user.created_at.strftime("%B %d, %Y") %></p>
    </div>
  </div>

  <div class="mt-8 flex space-x-4">
    <%= link_to "Edit User", edit_admin_path(@user), class: "bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg font-semibold transition" %>
    <%= link_to "Delete User", admin_path(@user),
            data: { turbo_confirm: "Are you sure?" },
            method: :delete,
            class: "bg-red-600 hover:bg-red-700 px-6 py-3 rounded-lg font-semibold transition" %>

   
    <%= link_to "Back to Dashboard", admin_index_path, class: "bg-gray-700 hover:bg-gray-800 px-6 py-3 rounded-lg font-semibold transition" %>
  </div>
</div>
</body>