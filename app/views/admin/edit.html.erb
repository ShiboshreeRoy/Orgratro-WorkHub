<body class="bg-black">
<div class="min-h-screen bg-black text-green-400 p-6 flex flex-col items-center justify-center">
  <div class="w-full max-w-xl bg-gray-900 rounded-xl shadow-lg p-8">
    <h1 class="text-3xl font-extrabold mb-6 text-green-400 text-center">Edit User</h1>

    <%= form_for @user, url: admin_path(@user), method: :patch, html: { class: "space-y-6" } do |f| %>
      
      <div>
        <%= f.label :email, class: "block text-sm font-semibold mb-1 text-green-300" %>
        <%= f.email_field :email, class: "w-full p-3 rounded bg-gray-800 text-green-100 border border-green-700 focus:outline-none focus:ring-2 focus:ring-green-400" %>
      </div>

      <div>
        <%= f.label :role, "Role", class: "block text-sm font-semibold mb-1 text-green-300" %>
        <%= f.select :role, options_for_select(['admin', 'standard'], @user.role), {}, 
          class: "w-full p-3 rounded bg-gray-800 text-green-100 border border-green-700 focus:outline-none focus:ring-2 focus:ring-green-400" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Update User", class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded transition focus:outline-none focus:ring-4 focus:ring-green-500" %>
        
        <%= link_to "Cancel", admin_path(@user), class: "text-green-400 hover:text-green-600 font-semibold" %>
      </div>

    <% end %>
  </div>
</div>
</body>