<body class="bg-black text-blue-300">
  <% content_for :title, "Contact Us" %>

<div class="max-w-2xl mx-auto mt-16 px-6 sm:px-8 lg:px-10 py-10 bg-black shadow-2xl rounded-2xl">
  <h1 class="text-3xl sm:text-4xl font-extrabold text-blue-700 mb-10 text-center">Get in Touch</h1>

  

  <%= form_with model: @contact_message, class: "space-y-6", local: true do |f| %>
    <% if @contact_message.errors.any? %>
      <div class="bg-red-50 text-red-600 p-4 rounded-md border border-red-200">
        <h2 class="font-semibold mb-2">
          <%= pluralize(@contact_message.errors.count, "error") %> prevented this message from being sent:
        </h2>
        <ul class="list-disc pl-5 text-sm">
          <% @contact_message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-blue-700 mb-1" %>
        <%= f.text_field :name, placeholder: "Your full name",
              class: "w-full px-4 py-2 rounded-lg border border-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-sm" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-blue-700 mb-1" %>
        <%= f.email_field :email, placeholder: "you@example.com",
              class: "w-full px-4 py-2 rounded-lg border border-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :subject, class: "block text-sm font-medium text-blue-700 mb-1" %>
      <%= f.text_field :subject, placeholder: "Subject of your message",
            class: "w-full px-4 py-2 rounded-lg border border-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-sm" %>
    </div>

    <div>
      <%= f.label :message, class: "block text-sm font-medium text-blue-700 mb-1" %>
      <%= f.text_area :message, rows: 6, placeholder: "Write your message here...",
            class: "w-full px-4 py-2 rounded-lg border border-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-sm resize-y" %>
    </div>

    <div class="text-center">
      <%= f.submit "Send Message",
            class: "inline-block w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow transition duration-150" %>
    </div>
  <% end %>
</div>

</body>