<body class="bg-black text-blue-300">
  <% content_for :title, "Message Details" %>

<div class="max-w-4xl mx-auto mt-12 p-10 bg-white shadow-xl rounded-2xl border border-gray-200">
  <h1 class="text-4xl font-extrabold text-blue-600 mb-10 tracking-tight">
    📩 Message Details
  </h1>

  <div class="grid gap-6 text-gray-800 text-base leading-relaxed">
    <div>
      <span class="font-semibold block text-gray-500">Name:</span>
      <p class="text-lg mt-1"><%= @contact_message.name %></p>
    </div>

    <div>
      <span class="font-semibold block text-gray-500">Email:</span>
      <p class="text-lg mt-1"><%= @contact_message.email %></p>
    </div>

    <div>
      <span class="font-semibold block text-gray-500">Subject:</span>
      <p class="text-lg mt-1"><%= @contact_message.subject %></p>
    </div>

    <div>
      <span class="font-semibold block text-gray-500">Message:</span>
      <p class="mt-2 bg-gray-50 text-gray-700 text-lg p-6 rounded-lg border border-gray-100 shadow-sm whitespace-pre-line">
        <%= @contact_message.message %>
      </p>
    </div>
  </div>

  <div class="mt-10 flex flex-wrap gap-4">
    <%= link_to "← Back to Inbox", contact_messages_path,
      class: "inline-flex items-center px-5 py-2.5 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded-md font-medium transition" %>


        <%= link_to "🗑️ Delete Message", contact_message_path(@contact_message),
    data: { turbo_method: "delete", turbo_confirm: "Are you sure you want to delete this message?" },
    class: "inline-flex items-center px-5 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-md font-semibold transition" %>

    </div>
</div>
</body>