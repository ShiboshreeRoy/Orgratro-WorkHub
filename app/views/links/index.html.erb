<% content_for :title, "Links" %>

<div class="w-full max-w-5xl mx-auto mt-12 px-4">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-4 bg-green-100 text-green-700 font-medium rounded-md mb-6 text-center shadow-sm">
      <%= notice %>
    </p>
  <% end %>

  <!-- Page Header -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
    <h1 class="text-4xl font-extrabold text-blue-800">Links</h1>
    <%= link_to "New Link", new_link_path, class: "inline-block rounded-lg px-4 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium transition duration-150 shadow-md" %>
  </div>

  <!-- Links List -->
  <div id="links" class="space-y-6">
    <% if @links.any? %>
      <% @links.each do |link| %>
        <div class="bg-white border border-gray-200 rounded-xl shadow-md p-6 flex flex-col sm:flex-row sm:justify-between sm:items-center">
          <!-- Render Link Partial -->
          <%= render link %>

          <% if current_user.admin? %>
            <!-- Admin Actions -->
            <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row sm:space-x-3 space-y-2 sm:space-y-0 w-full sm:w-auto">
              <%= link_to "Show", link, class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition" %>
              <%= link_to "Edit", edit_link_path(link), class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition" %>
              <%= button_to "Destroy", link, method: :delete, data: { turbo_confirm: "Are you sure?" },
                  class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-red-600 hover:bg-red-500 text-white font-medium transition" %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="flex flex-col items-center justify-center text-center text-gray-500 py-12 text-lg font-medium">
        <%= image_tag("no_link.png", class: "w-12 h-12 mb-4") %>
        <p>No links available.<br>Why not create one?</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Tailwind Custom Style (optional override) -->
<style>
  body {
    background-color: rgb(0, 0, 0); /* black */
    color: rgb(59, 130, 246);       /* Tailwind blue-500 */
    font-family: 'Inter', sans-serif;
  }
</style>
