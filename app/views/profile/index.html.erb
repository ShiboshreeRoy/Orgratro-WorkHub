<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-blue-300 font-sans antialiased">
  <div class="flex justify-center items-center min-h-screen px-4 py-8">
    <% if current_user.admin? || current_user.completed_task? %>
      <div class="w-full max-w-md bg-gray-800 rounded-3xl shadow-2xl border border-gray-700 p-6 sm:p-8 transform transition-all hover:scale-105">

        <!-- Profile Header -->
        <div class="flex flex-col items-center mb-6">
          <div class="w-24 h-24 sm:w-28 sm:h-28 rounded-full bg-gradient-to-tr from-blue-400 to-purple-500 flex items-center justify-center text-white text-3xl sm:text-4xl font-bold mb-4 animate-pulse">
            <%= current_user.name.first.upcase rescue "U" %>
          </div>
          <h2 class="text-2xl sm:text-3xl font-extrabold text-blue-400 text-center tracking-wide">
            <%= current_user.admin? ? "Admin Profile" : "Your Profile" %>
          </h2>
        </div>

        <!-- Profile Info -->
        <div class="space-y-4 sm:space-y-5">
          <div class="flex items-center bg-gray-700 rounded-xl p-3 hover:bg-gray-600 transition-colors">
            <i class="fas fa-user mr-3 text-blue-400"></i>
            <span class="font-semibold text-gray-200">Name:</span>
            <span class="ml-2 text-gray-100">
              <%= current_user.name.presence || current_user.email.split("@").first.capitalize %>
            </span>
          </div>

          <div class="flex items-center bg-gray-700 rounded-xl p-3 hover:bg-gray-600 transition-colors">
            <i class="fas fa-envelope mr-3 text-blue-400"></i>
            <span class="font-semibold text-gray-200">Email:</span>
            <span class="ml-2 text-gray-100"><%= current_user.email %></span>
          </div>

          <div class="flex items-center bg-gray-700 rounded-xl p-3 hover:bg-gray-600 transition-colors">
            <i class="fab fa-whatsapp mr-3 text-green-500"></i>
            <span class="font-semibold text-gray-200">WhatsApp Number:</span>
            <span class="ml-2 text-gray-100"><%= current_user.wp_number.presence || "-" %></span>
          </div>
        </div>

        <!-- Edit Button -->
        <div class="mt-6 sm:mt-8 text-center">
          <%= link_to "Edit Profile", edit_user_registration_path, 
                class: "inline-block px-5 sm:px-6 py-2 sm:py-3 bg-gradient-to-r from-blue-500 to-purple-500 hover:from-blue-600 hover:to-purple-600 text-white rounded-2xl font-semibold shadow-lg transition-all transform hover:-translate-y-1" %>
        </div>

      </div>
    <% else %>
      <div class="text-center text-gray-300">
        <p class="text-lg sm:text-xl font-semibold">You must complete your tasks to view your profile.</p>
      </div>
    <% end %>
  </div>
</body>
