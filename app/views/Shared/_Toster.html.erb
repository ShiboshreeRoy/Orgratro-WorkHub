<div id="flash-messages" class="fixed top-5 right-5 z-50 space-y-2">
  <% if notice %>
    <div class="toast bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-md flex items-center space-x-2 animate-slide">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
      </svg>
      <span><%= notice %></span>
    </div>
  <% end %>

  <% if alert %>
    <div class="toast bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-md flex items-center space-x-2 animate-slide">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
      </svg>
      <span><%= alert %></span>
    </div>
  <% end %>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const toasts = document.querySelectorAll(".toast");
    toasts.forEach(toast => {
      setTimeout(() => {
        toast.classList.add("animate-fade-out");
        setTimeout(() => toast.remove(), 300); // Match duration with CSS
      }, 5000); // Show for 5 seconds
    });
  });
</script>
<style>
    .toast {
        transition: transform 0.3s ease, opacity 0.3s ease;
    }
    
    .animate-slide {
        transform: translateY(0);
        opacity: 1;
    }
    
    .animate-fade-out {
        transform: translateY(-20px);
        opacity: 0;
    }
    
    #flash-messages {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .toast svg {
        flex-shrink: 0;
    }
    .toast span {
        flex-grow: 1;
    }
    
</style>       