<body class="bg-black text-blue-200 font-sans antialiased min-h-screen flex items-center justify-center px-4">

  <div class="mt-5 max-w-4xl w-full bg-gradient-to-br from-gray-900/80 via-gray-800/80 to-gray-900/80 backdrop-blur-2xl border border-blue-600/50 rounded-[2rem] shadow-[0_0_60px_rgba(0,0,255,0.1)] p-6 sm:p-12 text-center transition-all animate-fade-in-up">

    <!-- Developer Image -->
    <div class="flex justify-center mb-6 animate-scale-in">
    <%= image_tag("dev.png",alt: "Developer Photo", class: "w-32 h-32 sm:w-36 sm:h-36 rounded-full border-4 border-blue-500 shadow-lg hover:shadow-blue-400 transition duration-500 ease-in-out transform hover:scale-110")%>
      
    </div>

    <!-- Developer Name -->
    <h1 class="text-4xl sm:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-blue-500 to-indigo-600 mb-4 animate-fade-in-up">
      <i class="fas fa-user mr-2"></i> <%= @dev_name %>
    </h1>

    <!-- Developer Info -->
    <p class="text-lg sm:text-xl font-medium mb-8 leading-relaxed text-blue-300 animate-fade-in-up delay-100">
      <i class="fas fa-code text-blue-400 mr-2"></i> <%= @dev_info %>
    </p>

    <!-- Contact Info -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-6 text-blue-300 mb-10 animate-fade-in-up delay-200">
      <div class="flex items-center text-base sm:text-lg">
        <i class="fas fa-envelope text-blue-400 mr-3"></i>
        <span><%= @dev_email %></span>
      </div>
      <div class="flex items-center text-base sm:text-lg">
        <i class="fas fa-phone-alt text-blue-400 mr-3"></i>
        <span><%= @dev_cont %></span>
      </div>
    </div>

    <!-- Social Links -->
    <div class="flex justify-center gap-8 text-3xl animate-fade-in-up delay-300">
      <a href="<%= @dev_git %>" target="_blank" class="hover:text-blue-400 transition-all transform hover:scale-110 duration-300">
        <i class="fab fa-github"></i>
      </a>
      <a href="<%= @dev_link %>" target="_blank" class="hover:text-blue-400 transition-all transform hover:scale-110 duration-300">
        <i class="fab fa-linkedin"></i>
      </a>
      <a href="<%= @dev_face %>" target="_blank" class="hover:text-blue-400 transition-all transform hover:scale-110 duration-300">
        <i class="fab fa-facebook"></i>
      </a>
    </div>

  </div>

</body>
