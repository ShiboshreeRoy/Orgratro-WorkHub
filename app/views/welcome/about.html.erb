  <!-- Animations & Card Styling -->
  <style>
    @keyframes fade-in-down {
      0% { opacity: 0; transform: translateY(-30px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    @keyframes slide-up-slow {
      0% { opacity: 0; transform: translateY(60px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-down {
      animation: fade-in-down 1s ease-out forwards;
    }
    .animate-slide-up-slow {
      animation: slide-up-slow 1.2s ease-out forwards;
    }

    .profile-card {
      background: linear-gradient(145deg, #0f172a, #1e293b);
      border: 1px solid #3b82f6;
      border-radius: 1.5rem;
      width: 100%;
      max-width: 340px;
      text-align: center;
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      box-shadow: 0 10px 30px rgba(0, 255, 255, 0.15);
    }

    .profile-card:hover {
      transform: scale(1.04);
      box-shadow: 0 12px 35px rgba(0, 255, 255, 0.3);
    }

    .animated-link {
      color: #60a5fa;
      text-decoration: underline;
      transition: color 0.3s ease, text-shadow 0.3s ease;
    }

    .animated-link:hover {
      color: #93c5fd;
      text-shadow: 0 0 5px rgba(96, 165, 250, 0.8);
    }

    .glow {
      text-shadow: 0 0 10px rgba(96, 165, 250, 0.6);
    }

    .shimmer {
      animation: shimmer 2.5s infinite;
      background: linear-gradient(90deg, rgba(0,0,0,0) 0%, rgba(0,255,255,0.2) 50%, rgba(0,0,0,0) 100%);
      background-size: 200% 100%;
    }

    @keyframes shimmer {
      0% { background-position: -100% 0; }
      100% { background-position: 100% 0; }
    }
  </style>

</body>
<script>
  // Initialize animations
  document.addEventListener("DOMContentLoaded", function() {
    const fadeInElements = document.querySelectorAll('.animate-fade-in-down, .animate-slide-up-slow');
    fadeInElements.forEach(el => {
      el.classList.add('animate-fade-in-down');
    });
  });
</script>