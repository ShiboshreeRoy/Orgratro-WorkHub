 <body class="bg-black text-blue-400 ">
 <div class="max-w-3xl mx-auto mt-10 mb-6 px-4">
  <h1 class="text-2xl sm:text-3xl font-bold text-blue-700 mb-2">ðŸ”” Notifications</h1>
  <p class="text-sm text-gray-600">
    You have <span class="font-semibold text-blue-600"><%= @total_notifications %></span> notification<%= 's' unless @total_notifications == 1 %>.
  </p>
</div>

<% @notifications.each do |notification| %>
  <div class="relative bg-white rounded-xl shadow-md p-6 mb-6 border border-blue-100 hover:shadow-lg transition-all duration-200 max-w-3xl mx-auto px-4">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
      <div class="w-full">
        <h2 class="text-lg sm:text-xl font-bold text-blue-700 mb-1 tracking-tight">
          <%= notification.title %>
        </h2>
        <p class="text-gray-700 text-sm sm:text-base leading-relaxed">
          <%= notification.message %>
        </p>
        <p class="text-xs text-gray-500 mt-2">
          <%= notification.created_at.strftime("%b %d, %Y at %I:%M %p") %>
        </p>
      </div>

      <div class="flex-shrink-0 sm:ml-4">
        <%= link_to "ðŸ—‘ Delete",
                    notification_path(notification),
                    method: :delete,
                    data: { turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this notification?" },
                    class: "inline-block text-sm bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium shadow-sm transition" %>
      </div>
    </div>
  </div>
<% end %>
</body>